{
  "version": 2,
  "builds": [
   {
    "src": "backend/server.js",
    "use": "@vercel/node"
   },
   {
     "src": "frontend/dist/**",
     "use": "@vercel/static"
   }
  ],
  "routes": [
   {
    "src": "/api(.*)",
    "dest": "backend/server.js",
    "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS", "PATCH"],
    "headers": {
     "Access-Control-Allow-Origin": "*"
    }
   },
   {
     "src": "/(.*)",
     "dest": "frontend/dist/index.html"
   }
  ]
  
 }