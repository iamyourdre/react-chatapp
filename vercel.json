{
  "version": 2,
  "rewrites": [
    {
      "source": "/api/(.*)", 
      "destination": "/backend/server.js"
    },
    {
      "source": "/(.*)", 
      "destination": "/"
    }
  ],
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }
      ]
    }
  ]
}
