{
  "version": 2,
  "rewrites":  [
    {"source": "/(.*)", "destination": "/"}
  ],
  "builds": [
   {
    "src": "backend/server.js",
    "use": "@vercel/node"
   }
  ],
  "routes": [
   {
    "src": "/api(.*)",
    "dest": "backend/server.js",
    "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS", "PATCH"],
    "headers": {
     "Access-Control-Allow-Origin": "*"
    }
   }
  ]
  
 }